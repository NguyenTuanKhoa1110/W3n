@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Manage Books</h5>
                <p class="card-text">Add, edit, or delete books in the store.</p>
                <a asp-controller="Admin" asp-action="ManageBooks" class="btn btn-primary">Go to Books</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Manage Orders</h5>
                <p class="card-text">View and update customer orders.</p>
                <a asp-controller="Admin" asp-action="ManageOrders" class="btn btn-primary">Go to Orders</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Manage Users</h5>
                <p class="card-text">View and manage user accounts.</p>
                <a asp-controller="Admin" asp-action="ManageUsers" class="btn btn-primary">Go to Users</a>
            </div>
        </div>
    </div>
</div>