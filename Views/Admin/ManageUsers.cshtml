@model List<W3_test.Domain.Models.AppUser>
@{
    ViewData["Title"] = "Manage Users";
    var roles = ViewBag.Roles as List<Microsoft.AspNetCore.Identity.IdentityRole>;
}

<h2>Manage Users</h2>

@if (ViewBag.Error != null)
{
    <div style="color:red;">@ViewBag.Error</div>
}
else if (ViewBag.Message != null)
{
    <div style="color:green;">@ViewBag.Message</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Current Role</th>
            <th>Change Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var currentRole = ViewBag.UserRoles[user.Id] as string ?? "";
            <tr>
                <td>@user.Email</td>
                <td>@currentRole</td>
                <td>
                    <form asp-action="AssignRole" method="post">
                        <input type="hidden" name="userId" value="@user.Id" />                                           
                        <select name="roleName" class="form-control d-inline-block w-auto">
                            <option value="">-- Select Role --</option>
                            @foreach (var role in roles)
                            {
                                <option value="@role.Name" selected="@(role.Name == currentRole ? "selected" : null)">@role.Name</option>

                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Save</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
