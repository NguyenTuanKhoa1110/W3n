@model IEnumerable<AppUserDTO>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get" asp-controller="Admin" asp-action="ManageUsers">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Search users..." value="@ViewData["SearchQuery"]" />
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
